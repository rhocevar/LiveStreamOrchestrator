// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Livestream model for managing LiveKit room lifecycle and state
model Livestream {
  id               String            @id @default(uuid())
  roomName         String            @unique
  title            String
  description      String?
  status           LivestreamStatus  @default(SCHEDULED)
  createdBy        String
  maxParticipants  Int               @default(100)
  emptyTimeout     Int               @default(600)
  metadata         Json?

  // Timestamps
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  startedAt        DateTime?
  endedAt          DateTime?

  // Relations
  participants     Participant[]

  @@map("livestreams")
}

// Participant model for tracking users in livestreams
model Participant {
  id            String            @id @default(uuid())
  livestreamId  String
  livestream    Livestream        @relation(fields: [livestreamId], references: [id], onDelete: Cascade)
  userId        String
  displayName   String
  role          ParticipantRole   @default(VIEWER)
  status        ParticipantStatus @default(JOINED)
  metadata      Json?

  // Timestamps
  joinedAt      DateTime          @default(now())
  leftAt        DateTime?

  // Composite index for efficient queries
  @@index([livestreamId, status])
  @@index([userId])
  @@map("participants")
}

// Enum for livestream status
enum LivestreamStatus {
  SCHEDULED
  LIVE
  ENDED
  ERROR
}

// Enum for participant role (host can publish, viewer can only subscribe)
enum ParticipantRole {
  HOST
  VIEWER
}

// Enum for participant status
enum ParticipantStatus {
  JOINED
  LEFT
}
